@model UNETI.FIT.Models.ViewModels.ArticleViewModel
@using UNETI.FIT;
@using UNETI.FIT.Models.Entity;

@{
    ViewBag.Title = Resources.Resource.Home;

    int current = (int)ViewData["current"];
    int Next = current + 1, Prev = 0;
    if (current > 0)
    {
        Prev = current - 1;
    }
}

@if (!String.IsNullOrWhiteSpace(Model.Title))
{ 
    <div class="jum">
        <img class="col-lg-12" src="~/content/upload/@Model.Thumbnail" />

        <div class="news">
            <div class="txtnews">
                <h4 style="padding:5px 0;"><a href="@Url.Action("details", "home", new { id = Model.ID })">@Model.Title</a></h4>
            </div>
        </div>
        <div class="directionNav">
            <a href="@Url.Action("Index", "Home", new { id = Prev })" class="prevNav">
                <span class="glyphicon glyphicon-circle-arrow-left"></span>
            </a>
            <a href="@Url.Action("Index", "Home", new { id = Next })" class="nextNav">
                <span class="glyphicon glyphicon-circle-arrow-right"></span>
            </a>
        </div>
    </div>
}

@{
    Html.RenderAction("Category", new { type = CategoryTypeEnum.Article });
}
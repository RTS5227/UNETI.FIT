@using UNETI.FIT.Models.Entity;
@model Category

@{
    ViewBag.Title = Resources.Resource.Edit;
}

@section navbar{
    <li>@Html.ActionLink(Resources.Resource.ListCategoryManager, "index")</li>
    <li class="active">@ViewBag.Title</li>
}

<div class="box box-primary">
    <div class="box-header">
        <h2 class="box-title">@Model.Name</h2>
    </div>
    @using (Html.BeginForm("edit", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend></legend>

            <div class="box-body">
                @Html.EditorForModel()
            </div>

            <p class="box-footer">
                <input type="submit" class="btn btn-primary" value="@Resources.Resource.Save" />
            </p>
        </fieldset>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
